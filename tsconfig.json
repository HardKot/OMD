{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~core": ["./src/core/Core"],
      "~routes/*": ["./src/routes/*"],
      "~screens/*": ["./src/screens/*"],
      "~assets/*": ["./assets/*"],
      "~i18n": ["./src/i18n"],
      "~styles": ["./src/styles"],
      "~api/*": ["./src/api/*"],
      "~components/*": ["./src/components/*"],
      "~firebase": ["./src/Firebase"],
      "~constants": ["./src/constants"],
      "~store/*": ["./src/store/*"],
      "~containers/*": ["./src/containers/*"],
      "~hooks/*": ["./src/hooks/*"],
      "~contexts/*": ["./src/contexts/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/store/store",
      "./src/routes/routes"
    ],
    "experimentalDecorators": true
  }
}
