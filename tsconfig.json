{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "ES5",
		"jsx": "react",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"~core": ["./src/core"],
			"~routes/*": ["./src/routes/*"],
			"~assets/*": ["./assets/*"],
			"~api": ["./src/api"],
			"~components/*": ["./src/components/*"],
			"~constants": ["./src/constants"],
			"~store": ["./src/store"],
			"~hooks": ["./src/hooks"],
			"~contexts/*": ["./src/contexts/*"],
			"~tools": ["./src/tools"],
			"~types": ["./src/types"],
			"~i18n": ["./src/i18n"],
			"~styles": ["./src/styles"],


			"@/shared/*": ["./src/shared/*"],
			"@/entities/*": ["./src/entities/*"],
			"@/features/*": ["./src/features/*"],
			"@/widgets/*": ["./src/widgets/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/app/*": ["./src/app/*"],
			"@/assets/*": ["./assets/*"],
		},
		"typeRoots": ["./node_modules/@types"],
		"experimentalDecorators": true
	}
}
